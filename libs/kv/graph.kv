#:import Window kivy.core.window.Window
#:import get_hex_from_color kivy.utils.get_hex_from_color
#:import OpacityScrollEffect kivy.effects.opacityscroll
#:import ObjectProperty kivy.properties

<GraphBox>:
    MDCard:
        id: mdcard_id
        md_bg_color: app.theme_cls.accent_color
        radius: [sp(25), sp(25), sp(25), sp(25)]
        MDRelativeLayout:
            MDRelativeLayout:
                MDAnchorLayout:
                    id: garden_graph_placer
                    anchor_x: "center"
                    anchor_y: "center"
                    padding: 0, sp(20), 0, sp(28)
            MDRelativeLayout:
                MDAnchorLayout:
                    anchor_x: "right"
                    anchor_y: "bottom"
                    padding: sp(5), sp(5), sp(5), sp(5)
                    MDFillRoundFlatButton:
                        id: graph_main_text
                        #markup: True
                        #halign: "center"
                        #valign: "middle"
                        text: ''
                        md_bg_color: root.graph_main_text_color
                        font_size: sp(18)
            MDRelativeLayout:
                MDAnchorLayout:
                    anchor_x: "right"
                    anchor_y: "top"
                    padding: sp(5), sp(5), sp(5), sp(5)
                    MDFillRoundFlatButton:
                        id: graph_labvar_name_button
                        size_hint: None, None
                        size: sp(75), sp(25)
                        text: 'None'
                        theme_text_color: "Custom"
                        font_name: "DejaVuSans.ttf"
                        font_size: sp(12)
                        text_color: 1, 1, 1, 1
                        md_bg_color: 0, 0, 0, 0
                        on_release: root.DialogGraphSettingsOpen()


<GContainer>:
    gcontainer: gcontainer
    scrollview: scroll_view

    MDScrollView:
        id: scroll_view
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: Factory.OpacityScrollEffect
        MDGridLayout:
            id: gcontainer
            size_hint_y: None
            cols: root.columns
            spacing: sp(5)
            #padding: [sp(5), sp(5), sp(5), sp(5)]
            height: self.minimum_height