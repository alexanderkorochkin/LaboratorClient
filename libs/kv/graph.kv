#:import Factory kivy.factory.Factory
#:import Window kivy.core.window.Window

<GraphBox>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        canvas.after:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Line:
                width: 1
                rectangle: self.x + 0.5, self.y + 0.5, self.width - 1, self.height - 1
        RelativeLayout:
            RelativeLayout:
                canvas:
                    Color:
                        rgba: 0.0, 0.0, 0.0, 0.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "center"
                    id: garden_graph_placer
            RelativeLayout:
                AnchorLayout:
                    anchor_x: "left"
                    anchor_y: "top"
                    padding: sp(10), sp(10), sp(10), sp(10)
                    TouchableLabel:
                        id: btn_close_box
                        size_hint: None, None
                        size: sp(25), sp(25)
                        font_name: "DejaVuSans.ttf"
                        font_size: sp(10)
                        text: "тип"
                        border_color: 1, 0, 0, 0.4
                        on_release: root.DoubleSingleTap()
                AnchorLayout:
                    id: var_selection_box
                    anchor_x: "right"
                    anchor_y: "top"
                    padding: sp(10), sp(10), sp(10), sp(10)
                    TouchableLabel:
                        size_hint: None, None
                        size: sp(75), sp(25)
                        font_name: "DejaVuSans.ttf"
                        font_size: sp(10)
                        text: str(root.labvar_name)
                        border_color: 0, 0, 0, 0.4
                        on_release:
                            Factory.ListLabVarPopup().open(root.id)
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Label:
                        markup: True
                        text: str(root.labvar_value) + " [color=#ffc66d](AVG: " + str(root.avg_value) + ")[/color]"
                        font_size: Window.width / sp(15)
                        opacity: 1


<GraphContainer>:
    container: graph_container
    scrollview: scroll_view

    ScrollView:
        id: scroll_view
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: graph_container
            size_hint_y: None
            cols: root.columns
            height: self.minimum_height