#:import EnterEndpointPopup libs.enterendpointpopup

<EnterEndpointPopup>:
    title: "Enter the endpoint URL"
    title_align: "center"
    separator_color: 1, 1, 1, 1
    size_hint: None, None
    size: min(0.95 * Window.width, dp(500)), sp(150)
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: endpoint_input
            text: root.endpoint
            font_size: sp(12)
        BoxLayout:
            AnchorLayout:
                anchor_x: "center"
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1, 1
                    RectangleFlatButton:
                        size_hint: 1, 1
                        text: 'Save'
                        on_press: root.SaveEndpoint()
                    RectangleFlatButton:
                        size_hint: 1, 1
                        text: 'Cancel'
                        on_press: root.dismiss()