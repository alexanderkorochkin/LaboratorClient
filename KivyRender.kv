#: import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
    IPEnterScreen:
    MainScreen:

<IPEnterScreen>:
    name: "IP Enter Window"
    FloatLayout:
        BoxLayout:
            size_hint: 0.9, 0.04
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            TextInput:
                id: text_endpoint
                text: "opc.tcp://192.168.1.67:4840"
                foreground_color: (0, 0, 0, 0.4)
                on_focus: root.FocusedOnce()

            Button:
                id: button_connect
                size_hint: 0.5, 1
                text: "Save"
                on_press:
                    root.ApplyURL()
                    app.root.current = "Main Window"

<MainScreen>:
    name: "Main Window"
    BoxLayout:
        orientation: "vertical"
        Label:
            id: label_text
            text: "NONE"
        Button:
            id: button_connect
            size_hint: 1, 0.04
            text: "Connect"
            on_press:
                self.disabled = True
                button_disconnect.disabled = False
                root.Connect()
        Button:
            id: button_disconnect
            size_hint: 1, 0.04
            text: "Disconnect"
            disabled: True
            on_press:
                self.disabled = True
                button_connect.disabled = False
                root.Disconnect()