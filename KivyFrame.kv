<LaboratorClientMain>:

    BoxLayout:
        id: main_stack
        orientation: "vertical"
        BoxLayout:
            id: top_menu
            orientation: "horizontal"
            size_hint: 1, 0.04
            TextInput:
                id: text_input
                text: "opc.tcp://192.168.1.22:4840"
                font_size: 16
            BoxLayout:
                size_hint: None, 1
                size: 200, self.size[1]
                Button:
                    id: btn_connect
                    text: "C"
                    on_press:
                        root.Connect()
                Button:
                    id: btn_disconnect
                    text: "D"
                    disabled: True
                    on_press:
                        root.Disconnect()
                Button:
                    id: btn_menu
                    text: "+"

                Button:
                    id: btn_menu
                    text: "-"

        BoxLayout:
            size_hint: 1, 0.02
            Label:
                id: info_log
                text: "Not connected"
                color: 1,0,0,1
                font_size: 12
        BoxLayout:
            id: view_port
            size_hint: 1, 1
        BoxLayout:
            id: bottom_menu
            size_hint: 1, 0.1
            Label:
                text: "Not connected"
                color: 1,0,0,1
                font_size: 12